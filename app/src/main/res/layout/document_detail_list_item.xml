<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_doc_layout_detail_number"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:id="@+id/tv_doc_layout_detail_serial_number"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            >
        </TextView>



        <TextView
            android:id="@+id/tv_doc_layout_detail_amount"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:id="@+id/tv_doc_layout_detail_unit_count"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textAlignment="center">
        </TextView>

        <ImageView
            android:id="@+id/img_doc_layout_detail_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_delete">
        </ImageView>
    </LinearLayout>

</LinearLayout>